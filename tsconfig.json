{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "types": ["node"],
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "declaration": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }
  